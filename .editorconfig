root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[{Context.sublime-menu,JsPrettier.sublime-commands,JsPrettier.sublime-settings}]
indent_style = tab

[*.{json,yml}]
indent_size = 2

[{*.cmd,appveyor.yml}]
end_of_line = crlf

[*.{md,txt}]
indent_style = space
trim_trailing_whitespaces = false
